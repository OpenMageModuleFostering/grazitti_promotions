<config>
    <modules>
        <Grazitti_Promotions>
            <version>0.1.0</version>
			<active>true</active>
            <codePool>local</codePool>
		</Grazitti_Promotions>
    </modules>
    <frontend>
        <routers>
            <promotions>
                <use>standard</use>
                <args>
                    <module>Grazitti_Promotions</module>
                    <frontName>promotions</frontName>
                </args>
            </promotions>
        </routers>
        <layout>
            <updates>
                <promotions>
                    <file>promotions.xml</file>
                </promotions>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<promotions>
				<use>admin</use>
				<args>
					<module>Grazitti_Promotions</module>
					<frontName>promotions</frontName>
				</args>
			</promotions>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<promotions module="promotions">
				<title>Promotions</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="promotions">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>promotions/adminhtml_promotions</action>
					</items>
				</children>
			</promotions>
		</menu>
		<acl>
            <resources>
                <admin>  <!--This is acl based on URL. If you see URL it would be /admin/system_config/ -->
                    <children>
                        <system>
                            <children>
                                         <config>
                                                  <children>
                                            <grazitti translate="title" module="promotions">  <!-- This is name of the section created by us -->
                                                <title>Test Section ACL</title>  <!-- Title as shown in User->Roles->Permissions Window -->
                                                <sort_order>99</sort_order>
                                            </grazitti>
                                        </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
<layout>
			<updates>
				<promotions>
					<file>promotions.xml</file>
				</promotions>
			</updates>
		</layout>
    </adminhtml>   
    
	<global>
        <models>
            <promotions>
                <class>Grazitti_Promotions_Model</class>
                <resourceModel>promotions_mysql4</resourceModel>
            </promotions>
            <promotions_mysql4>
                <class>Grazitti_Promotions_Model_Mysql4</class>
                <entities>
                    <promotions>
                        <table>promotions</table>
                    </promotions>
                </entities>
            </promotions_mysql4>
        </models>
		 <events>
           <customer_register_success>
                <observers>
                    <Grazitti_Promotions_Model_Observer>
                        <type>singleton</type>
                        <class>Grazitti_Promotions_Model_Observer</class>
                        <method>customerRegisterSuccess</method>
                    </Grazitti_Promotions_Model_Observer>
                </observers>
            </customer_register_success>
			<customer_save_after>
                <observers>
                    <Grazitti_Promotions_Model_Observer>
                        <type>singleton</type>
                        <class>Grazitti_Promotions_Model_Observer</class>
                        <method>customerSaveAfter</method>
                    </Grazitti_Promotions_Model_Observer>
                </observers>
            </customer_save_after>
             </events>
        <resources>
            <promotions_setup>
                <setup>
                    <module>Grazitti_Promotions</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </promotions_setup>
            <promotions_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </promotions_write>
            <promotions_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </promotions_read>
        </resources>
        <blocks>
            <promotions>
                <class>Grazitti_Promotions_Block</class>
            </promotions>
        </blocks>
        <helpers>
            <promotions>
                <class>Grazitti_Promotions_Helper</class>
            </promotions>
        </helpers>
    </global>
</config>